#!/usr/bin/env perl

use strict;
use warnings;

my ($output) = split(' ', `xrandr | grep "connected primary"`);
my (undef, $brightness) = split(':', `xrandr --verbose | grep -i brightness`);

if (defined $ARGV[0]) {
    if ($ARGV[0] eq 'up') {
        $brightness += 0.1;
    } elsif ($ARGV[0] eq 'down') {
        $brightness -= 0.1;
    }
}

`xrandr --output $output --brightness $brightness`;
print "$output $brightness";
